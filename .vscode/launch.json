{
    "version": "2.0.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Electron main",
            "runtimeExecutable": "${workspaceFolder}/electron2bunyan.sh",
            "program": "${workspaceRoot}/src/main/main.ts",
            "preLaunchTask": "npm: debug",
            "stopOnEntry": true,
            "sourceMaps": true,
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "protocol": "inspector",
            "outputCapture": "std",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug build script",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/scripts/build.ts"
            ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}"
        }
    ]
}
