{
    "version": "2.0.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Electron main",
            "preLaunchTask": "npm: debug",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}\\scripts\\electron2bunyan.bat"
            },
            "linux": {
                "runtimeExecutable": "${workspaceFolder}/scripts/electron2bunyan.sh"
            },
            "program": "${workspaceRoot}/src/main/main.ts",
            "outFiles": ["${workspaceRoot}/dist/**/*.js"],
            "sourceMaps": true,
            "protocol": "inspector",
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Electron main - NO BUILD",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}\\scripts\\electron2bunyan.bat"
            },
            "linux": {
                "runtimeExecutable": "${workspaceFolder}/scripts/electron2bunyan.sh"
            },
            "program": "${workspaceRoot}/src/main/main.ts",
            "outFiles": ["${workspaceRoot}/dist/**/*.js"],
            "sourceMaps": true,
            "protocol": "inspector",
            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug build script",
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["${workspaceFolder}/scripts/build.ts"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}"
        }
    ]
}
