{
    "name": "electro",
    "version": "1.0.0",
    "description": "An electron template leveraging typescript, marko, lasso and bulma",
    "main": "dist/main/main.js",
    "scripts": {
        "tsc": "tsc -p .",
        "clean": "rm -rf build out dist static .cache",
        "copy-files": "cpx \"src/renderer/**/*.{html,marko,js,css,json,png}\" dist/renderer",
        "copy-files:watch": "cpx \"src/renderer/**/*.{html,marko,js,css,json,png}\" dist/renderer --watch",
        "build": "npm run clean && npm run tsc && npm run copy-files",
        "lasso": "npm run build && ts-node scripts/build.ts",
        "start": "electron ./dist/main/main.js",
        "debug": "cross-env NODE_ENV=development npm run lasso",
        "dev": "cross-env NODE_ENV=development npm run lasso && npm run start",
        "prod": "cross-env NODE_ENV=production npm run lasso && npm run start",
        "watch": "npm run build && concurrently \"npm run copy-files:watch\" \"npm run lasso:watch\" \"npm run start\"",
        "dist": "npm run lasso && cross-env DEBUG=electron-builder build"
    },
    "build": {
        "appId": "flobby",
        "directories": {
            "output": "out"
        },
        "extends": null,
        "win": {
            "target": "nsis"
        }
    },
    "keywords": [
        "typescript",
        "electron",
        "desktop",
        "marko",
        "lasso",
        "markojs",
        "lassojs",
        "bulma"
    ],
    "author": "Jarvis Prestidge (jarvisprestidge@gmail.com)",
    "license": "MIT",
    "dependencies": {
        "electron-store": "^1.3.0",
        "koa": "^2.5.0",
        "koa-socket-2": "^1.0.17",
        "marko": "^4.4.28",
        "marko-path-router": "^0.7.3",
        "openport": "^0.0.5",
        "public-ip": "^2.4.0",
        "server-destroy": "^1.0.1",
        "socket.io": "^2.1.0",
        "socket.io-client": "^2.1.0",
        "sudo-prompt": "^8.2.0",
        "timesync": "^1.0.2"
    },
    "devDependencies": {
        "@lasso/marko-taglib": "^1.0.10",
        "@types/electron-store": "^1.3.0",
        "@types/koa": "^2.0.45",
        "@types/lasso": "^2.4.0",
        "@types/public-ip": "^2.3.0",
        "@types/server-destroy": "^1.0.0",
        "@types/socket.io": "^1.4.33",
        "@types/socket.io-client": "^1.4.32",
        "browserfs": "^1.4.3",
        "concurrently": "^3.5.0",
        "cpx": "^1.5.0",
        "cross-env": "^5.0.5",
        "electron": "^1.8.4",
        "electron-builder": "^20.10.0",
        "lasso": "^3.1.4",
        "lasso-marko": "^2.4.0",
        "ts-node": "^6.0.0",
        "tslint": "^5.9.1",
        "tslint-config-prettier": "^1.10.0",
        "typescript": "^2.8.1"
    }
}
